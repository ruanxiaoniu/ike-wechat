/* pages/login/index.wxss */

page{
  background-color: #283443;
}
.login{
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: white;
}
#login-title{
  text-align: center;
}
#login-title_text{
  color: white;
  font-size: 1.5rem;
  font-weight: bold;
  /* letter-spacing: 10px; */
}
#login-info{
  margin-top:20px;
}
#username, #password, #login-bottom{
  display: flex;
  justify-content: center;
  
}
#username-input, #password-input, #login-btn{
  border: 1px solid grey;
  border-radius: 5px;
  text-align: center;
  width: 15rem;
  height: 2rem;
  color: white;
}
#password-input{
  margin-top: 15px;
}
#login-btn{
  margin-top: 15px;
  background-color: #409EFF;
}
